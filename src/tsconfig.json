{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "allowJs": true,
        "outDir": "../dist",
        "rootDir": ".",
        "baseUrl": ".",
        "skipLibCheck": true,
        "paths": {
            "#types": ["types/index"],
            "#routes": ["routes/index"],
            "#utils/*": ["utils/*"],
            "#lib/*": ["lib/*"],
            "#root/*": ["*"]
        },
        "composite": false
    },
    "include": [".", "./**/*.json"],
    "exclude": ["./tsconfig.json"]
}
